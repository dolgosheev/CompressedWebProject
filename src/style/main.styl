*
    margin 0
    padding 0

.cf:before,
.cf:after
    content " "
    display table

.cf:after
    clear both
.cf
    *zoom 1

border-radius()
    -webkit-border-radius arguments
    -moz-border-radius arguments
    border-radius arguments

body
    font 14px Lucida Grande, Arial, sans-serif
    background #fff
    color #000
    width 100%

header > div, section > div,footer > div
    float left
    width 100%

@media all and (max-width: 1170px)
    header > div, section > div,footer > div
        float left
        width auto
.metka
     border thin solid red !important

.left
    float left

.right
    float right

.size
    width 1170px

.center
    margin 0 auto
    text-align center

.p50
    width 50%

#first
    background-color #4d4849
    color #918686

#first > div ,#third > div
    position relative
#first span
    color #e4ca87

.t-menu-l
    margin 20px 43px 20px 0
.t-menu-r
    margin 20px 0 20px 43px
.iblock
    display inline-block

ul
    overflow auto

ul > li
    float left
    padding 30px 20px 25px 40px
    text-transform uppercase
    font-weight bold
    color #bcc1c4

.cart-ico
        background url(/img/cart-ico.png)
        width 45px
        height 66px
        margin 0 0 -21px 20px
        position relative
.cart-ico > span
    color white !important
    background red
    width 15px
    height 15px
    border-radius 15px
    position absolute
    top 10px
    right 8px
    text-align center
    font-size 12px
.logo
    background url(/img/logo.png)
    width 170px
    height 221px
    position absolute
    top 0px
    left 500px
    margin 0 0 -176px 0

#third
    background-color #4d4849
    color #fff
    height 770px

#third h3
    margin 280px 0 30px 0
    text-transform uppercase
    font-weight bold

#third h1
    margin 1
    font-weight bold
    font-size 4em

#third p
    width 530px
    position relative
    display inline-block

#third .line
   background url(/img/line.png) center center no-repeat
   width 100%
   height 29px
   margin 5px 0

.arrow
    position absolute
    width 102px
    height 102px
    top 70px
.arrow-left
    background url(/img/arrows.png) left center no-repeat
    left 0
.arrow-right
    background url(/img/arrows.png) right center no-repeat
    right 0